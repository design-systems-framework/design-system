{
  "name": "@ds-framework/monorepo",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "elemental/*",
    "ds-framework/*",
    "site"
  ],
  "dependencies": {
    "@babel/core": "^7.4.5",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-react": "^7.0.0",
    "@babel/runtime": "^7.4.3",
    "@changesets/cli": "^1.2.0",
    "@emotion/core": "^10.0.7",
    "babel-eslint": "^10.0.2",
    "bolt-check": "^0.3.0",
    "eslint": "^5.14.1",
    "eslint-config-prettier": "^6.0.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-config-standard-react": "^7.0.2",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.14.2",
    "eslint-plugin-standard": "^4.0.0",
    "glob": "^7.1.3",
    "glob-promise": "^3.4.0",
    "next": "^8.0.3",
    "preconstruct": "^0.0.81",
    "prettier": "^1.18.2",
    "react": "^16.8.3",
    "react-dom": "^16.8.3"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "prettier": {
    "trailingComma": "es5",
    "singleQuote": true
  },
  "scripts": {
    "watch": "preconstruct watch",
    "build": "preconstruct build",
    "version-packages": "changeset bump",
    "publish-packages": "yarn build && changeset release",
    "start": "cd ./site && yarn dev",
    "postinstall": "preconstruct dev && bolt-check"
  },
  "preconstruct": {
    "packages": [
      "elemental/*",
      "ds-framework/*"
    ]
  }
}
